.search {
    margin-top: 5px;
    width: 750rpx;
    height: 40px;
}

/* 菜单 */
.menu {
    margin-top: 5px;
    width: 750rpx;
}

.scroll {
    display: flex;
    align-items: center;
}

.scroll-left {
    width: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f1f1f1;
}

.scroll-left-text {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 120rpx;
    height: 60px;
    color: gray;
}

.scroll-left-text-active {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 120rpx;
    height: 60px;
    background: white;
    color: gray;
    position: relative;
}

.text {
    width: 80rpx;
    height: 60px;
    font-size: 27rpx;
    word-break: break-all;
    display: flex;
    align-items: center;
    justify-content: center;
}

.scroll-left-text-active .line {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 5rpx;
    background-color: #166546;
}

.scroll-right {
    width: 630rpx;
}

.scroll-right-top {
    width: 630rpx;
    height: 30px;
}

.scroll-right-top-text {
    margin-left: 30rpx;
    width: 600rpx;
    height: 30px;
    line-height: 30px;
    font-size: 25rpx;
    color: gray;
    border-bottom: 1rpx solid #f1f1f1;
}

.scroll-right-view {
    width: 630rpx;
    height: 140px;
    display: flex;
    align-items: center;
}

.scroll-right-view .card {
    margin-left: 30rpx;
    width: 590rpx;
    height: 125px;
}

.scroll-right-view .right-card {
    width: 85px;
    height: 85px;
    margin-left: -5rpx;
}

.content {
    font-size: 25rpx;
    color: gray;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    margin-left: -15rpx;
    height: 30px;
    line-height: 30px;
}

.right-title-card{
    font-size: 30rpx;
    font-weight: bold;
    margin-left: -15rpx;
}

.price-box{
    display: flex;
    align-items: center;
}

.price{
    margin-top: 5rpx;
    font-size: 20rpx;
    color: gray;
}

.tag{
    margin-left: -15rpx !important;
    font-size: 20rpx !important;
    color: black !important;
    padding: 2rpx 5rpx 2rpx 5rpx !important;
    height: 20px !important;
}


.more{
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 27rpx;
    margin-left: -15rpx;
}



.add-tap-btn{
    background-color: #166546 !important;
    color: white !important;
    border-radius: 50% !important;

}

.add-no-tap-btn{
    border-radius: 50% !important;

}

.remove-tap-btn{
    color: white !important;
    border-radius: 50% !important;

}

.remove-tap-btn1{
    color: white !important;
    border-radius: 50% !important;
    background-color: #ffffff!important;
}

.remove-no-tap-btn{
    color: white !important;
    border-radius: 50% !important;
}



.count-tap{
    background-color: white !important;
}

.count-tap1{
    background-color: white !important;
    color: white !important;
}

.label-btn{
    font-size: 25rpx !important;
}


::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}


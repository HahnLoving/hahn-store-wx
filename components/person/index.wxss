.container{
    width: 750rpx;
}

.top{
    width: 750rpx;
    position: relative;
    height: 550rpx;
}

.header{
    width: 750rpx;
    height: 375rpx;
}

.header-shaow{
    position: absolute;
    top:0;
    left: 0;
    right: 0;
    width: 750rpx;
    height: 375rpx;
    background-color: black;
    opacity: 0.1;
}


.operation-box{
    position: absolute;
    margin-top: -200rpx;
    margin-left: 30rpx;
    width: 690rpx;
    height: 320rpx;
    box-shadow: 3rpx 1.5rpx 3rpx 3rpx  #f1f1f1;
    border-radius: 15rpx;
    background-color: white;
    position: relative;
}

.person-box{
    width: 690rpx;
    height: 175rpx;
    display: flex;
    align-items: center;
}

.person-box .avatar{
    width: 125rpx;
    height: 125rpx;
    border-radius: 50%;
    margin-left: 35rpx;
}

.person-box .message{
    width: 530rpx;
    height: 125rpx;
}

.person-box .message .top{
    width: 510rpx;
    height: 62.5rpx;
    display: flex;
    align-items: flex-end;
    justify-content: flex-start;
    font-weight: bold;
    margin-left: 20rpx;
    font-size: 32rpx;
}

.person-box .message .bottom{
    width: 510rpx;
    height: 52.5rpx;
    margin-left: 20rpx;
    font-size: 25rpx;
    margin-top: 10rpx;
    color: gray;
}

.operation-box .line{
    position: absolute;
    top: 50%;
    left: 30rpx;
    right: 30rpx;
    height: 3rpx;
    margin-top: 30rpx;
    background-color: #e6e6e6;
}

.bottom-box{
    margin-top: 35rpx;
}

.num {
    color: #166546;
    font-size: 42rpx;
    /*font-style: italic;*/
}

.text {
    height: 30rpx;
    font-size: 22rpx;
    /*font-family: PingFangSC-Regular;*/
    font-weight: 400;
    color: rgba(102, 102, 102, 1);
    line-height: 30rpx;
    margin-top: 9rpx;
}

.content{
    width: 750rpx;
}

.icon{
    color: #166546 !important;
}